	function goodNoteHit(daNote:Note):Void
	{
		if (!daNote.wasGoodHit)
		{
			if (!daNote.isSustainNote)
			{
				combo += 1;
				popUpScore(daNote.strumTime, daNote);
			}

			health += 0.023;

			totalNotesHits++;

			if (daNote.gfNote)
				gf.playSingAnim(daNote.noteData);
			else
				boyfriend.playSingAnim(daNote.noteData);

			playerStrums.forEach(function(spr:StaticNote)
			{
				if (Math.abs(daNote.noteData) == spr.ID)
				{
					spr.playAnim('confirm');
				}
			});

			updateAccuracy();
			updateScoreText();

			daNote.wasGoodHit = true;
			vocals.volume = 1;

			notes.remove(daNote, true);
			daNote.destroy();

			scriptsCall("onPlayerHit", [daNote]);
			customStage.call("onPlayerHit", [daNote]);
		}
	}

	function opponentHit(daNote:Note)
	{
		if (SONG.song != 'Tutorial')
			camZooming = true;

		var altAnim:String = "";

		if (SONG.notes[Math.floor(curStep / 16)] != null)
		{
			if (SONG.notes[Math.floor(curStep / 16)].altAnim)
				altAnim = '-alt';
		}

		if (daNote.altNote)
			altAnim = '-alt';

		if (daNote.gfNote)
			gf.playSingAnim(daNote.noteData, altAnim);
		else
			dad.playSingAnim(daNote.noteData, altAnim);

		opponentStrums.forEach(function(spr:StaticNote)
		{
			if (Math.abs(daNote.noteData) == spr.ID)
			{
				spr.playAnim('confirm');
			}
		});

		dad.holdTimer = 0;

		if (SONG.needsVoices)
			vocals.volume = 1;

		notes.remove(daNote, true);
		daNote.destroy();

		scriptsCall("onOpponentHit", [daNote]);
		customStage.call("onOpponentHit", [daNote]);
	}

	function updateAccuracy()
	{
		totalPlayed += 1;
		songAccuracy = totalNotesHits / totalPlayed * 100;
	}

	function truncateFloat(number:Float, precision:Int):Float
	{
		var num = number;
		num = num * Math.pow(10, precision);
		num = Math.round(num) / Math.pow(10, precision);
		return num;
	}

	function updateScoreText()
	{
		scoreTxt.text = 'Score: $songScore' + (isStoryMode ? ' ($campaignScore)' : '') + divider;
		scoreTxt.text += 'Misses: $songMisses' + (isStoryMode ? ' ($campaignMisses)' : '') + divider;
		scoreTxt.text += 'Accuracy: ${truncateFloat(songAccuracy, 2)}%';

		scoreTxt.screenCenter(X);
	}

