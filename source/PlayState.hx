				// Game Over doesn't get his own variable because it's only used here
				DiscordClient.changePresence("Game Over - " + detailsText, SONG.song + " (" + storyDifficultyText + ")", iconRPC);
				#end
			}
		}

		while (unspawnNotes[0] != null && unspawnNotes[0].strumTime - Conductor.songPosition < 1800 / SONG.speed)
		{
			var dunceNote:Note = unspawnNotes[0];
			notes.add(dunceNote);

			var index:Int = unspawnNotes.indexOf(dunceNote);
			unspawnNotes.shift();
		}

		if (generatedMusic)
		{
			notes.forEachAlive(function(daNote:Note)
			{
				if ((Settings.get("downscroll") && daNote.y < -daNote.height) || (!Settings.get("downscroll") && daNote.y > FlxG.height))
				{
					daNote.active = false;
					daNote.visible = false;
				}
				else
				{
					daNote.visible = true;
					daNote.active = true;
				}

				var strumLineMid = strumLine.y + Note.swagWidth / 2;

				if (Settings.get("downscroll"))
				{
					daNote.y = (strumLine.y + (Conductor.songPosition - daNote.strumTime) * (0.45 * FlxMath.roundDecimal(SONG.speed, 2)));

					if (daNote.isSustainNote)
					{
						if (daNote.animation.curAnim.name.endsWith("end") && daNote.prevNote != null)
							daNote.y += daNote.prevNote.height;
						else
							daNote.y += daNote.height / 2;
					}
				}
				else
				{
					daNote.y = (strumLine.y - (Conductor.songPosition - daNote.strumTime) * (0.45 * FlxMath.roundDecimal(SONG.speed, 2)));
				}

				if (!daNote.mustPress && daNote.wasGoodHit)
				{
					opponentHit(daNote);
				}

				if (daNote.isSustainNote && daNote.wasGoodHit)
				{
					if ((!Settings.get("downscroll") && daNote.y < -daNote.height)
						|| (Settings.get("downscroll") && daNote.y > FlxG.height))
					{
						daNote.active = false;
						daNote.visible = false;

						notes.remove(daNote, true);
						daNote.destroy();
					}
				}
				else if (daNote.tooLate || daNote.wasGoodHit)
				{
					if (daNote.mustPress && daNote.tooLate)
					{
						noteMiss(daNote);
					}

					daNote.active = false;
					daNote.visible = false;

					notes.remove(daNote, true);
					daNote.destroy();
				}
			});
		}

		if (!inCutscene)
			keyShit();

		scriptsCall("onUpdatePost", [elapsed]);
		customStage.call("onUpdatePost", [elapsed]);
	}

